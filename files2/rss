                     &lt;span class="n"&gt;beNode&lt;/span&gt; &lt;span class="o"&gt;=&lt;/span&gt; &lt;span class="n"&gt;node&lt;/span&gt;&lt;span class="o"&gt;;&lt;/span&gt;
                 &lt;span class="o"&gt;}&lt;/span&gt;
