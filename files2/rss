        reg[31 : 0] reg_tick_us;
        always @(posedge i_wire_clock or negedge i_wire_tick_resetn)
        begin
            if(!i_wire_tick_resetn)
            begin
                reg_tick_div100&amp;lt;=7&amp;#39;d0;
                reg_tick_us&amp;lt;=0;
            end
            else
            begin
                if(reg_tick_div100==7&amp;#39;d100)
                begin
                    reg_tick_div100&amp;lt;=7&amp;#39;d0;
                    reg_tick_us&amp;lt;=reg_tick_us+1;
                end
                else
                begin
                    reg_tick_div100&amp;lt;=reg_tick_div100+1;
                end
            end
        end&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;&lt;p class="ztext-empty-paragraph"&gt;&lt;br/&gt;&lt;/p&gt;&lt;p data-pid="trF_ne7t"&gt;è€Œgpuinfoæ”¯æŒä¸€ä¸ªopcodeåŠä¸€ä¸ªparam,å½“opcodeä¸º1æ—¶,è¿”å›GPUçš„ç‰ˆæœ¬,å½“opcodeä¸º2æ—¶,è¿”å›ä¸€ä¸ªè°ƒè¯•ä¿¡æ¯,ä¸º3æ—¶,åˆ™è¿”å›us timerçš„è®¡æ•°å™¨ã€‚ç›¸å…³å®ç°çš„è¯¦ç»†ä»£ç ï¼Œä½ å¯ä»¥æŸ¥é˜…painterengine_gpu_gpuinfo.v&lt;/p&gt;&lt;h3&gt;è°ƒç”¨VDMA IPæ ¸ï¼Œå®ç°HDMIè¾“å‡º&lt;/h3&gt;&lt;p data-pid="JOsJKzyR"&gt;VDMAæ˜¯vivadoå®˜æ–¹æä¾›çš„IPæ ¸,é¦–å…ˆæ·»åŠ ä¸€ä¸ªVDMAæ¨¡å—,æœç´¢å¹¶æ·»åŠ VDMAæ¨¡å—ï¼Œå¹¶åŒå‡»æ‰“å¼€è¿™ä¸ªæ¨¡å—çš„é…ç½®é¡µ&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic4.zhimg.com/v2-15a43f83417e094fea34f35674b0f743_b.jpg" data-caption="" data-size="normal" data-rawwidth="355" data-rawheight="127" class="content_image" width="355" data-original-token="v2-408972a6cbffe1aaef42d2e2baba7df4"/&gt;&lt;/figure&gt;&lt;p data-pid="JXYXyU08"&gt;å› ä¸ºæˆ‘ä»¬ä¸éœ€è¦å†™HDMIæ•°æ®,æ‰€ä»¥å¯ä»¥ç›´æ¥æŠŠEnable Write Channelè¿™ä¸ªé€šé“åˆ æ‰,å¼€å¯Read Channelå°±åƒ,æ³¨æ„æŠŠSteam Data Widthæ”¹æˆ24,å› ä¸ºæˆ‘ä»¬åªéœ€è¦è¾“å‡ºRGBé¢œè‰²å°±å¯ä»¥äº†&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic3.zhimg.com/v2-c1553bee4e0203ba854b5b1d31864ade_b.jpg" data-caption="" data-size="normal" data-rawwidth="1141" data-rawheight="656" class="origin_image zh-lightbox-thumb" width="1141" data-original="https://pic3.zhimg.com/v2-c1553bee4e0203ba854b5b1d31864ade_r.jpg" data-original-token="v2-635b921ac46a4c2edf24f7379e726937"/&gt;&lt;/figure&gt;&lt;p data-pid="pBWf-91Y"&gt;éšåæˆ‘ä»¬åˆ›å»ºAXI4-Stream to video outæ¨¡å—,è¿™ä¸ªæ¨¡å—å°†ä¼šå§DMAæ•°æ®æŒ‰ç…§DVIçš„æ—¶åºè¿›è¡Œè¾“å‡º&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic3.zhimg.com/v2-d6524465f3a413d837b374bdea292452_b.jpg" data-caption="" data-size="normal" data-rawwidth="546" data-rawheight="337" class="origin_image zh-lightbox-thumb" width="546" data-original="https://pic3.zhimg.com/v2-d6524465f3a413d837b374bdea292452_r.jpg" data-original-token="v2-f8ff343f33f0f8b164acfbb86a2edd44"/&gt;&lt;/figure&gt;&lt;p data-pid="GNSZAIG-"&gt;æ‰“å¼€æ¨¡å—è¿›è¡Œè®¾ç½®,å‚æ•°è®¾ç½®é™¤äº†clock mode ä¿®æ”¹æˆç‹¬ç«‹ï¼Œå…¶ä½™éƒ½ä¿ç•™é»˜è®¤å€¼&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic1.zhimg.com/v2-b3bad2f577f10b2fdf108e280f930c7c_b.jpg" data-caption="" data-size="normal" data-rawwidth="885" data-rawheight="637" class="origin_image zh-lightbox-thumb" width="885" data-original="https://pic1.zhimg.com/v2-b3bad2f577f10b2fdf108e280f930c7c_r.jpg" data-original-token="v2-702781d577a9d758129eab97efc17d35"/&gt;&lt;/figure&gt;&lt;p data-pid="1sQryFkf"&gt;å› ä¸ºåé¢æˆ‘ä»¬è¦ç”¨video timing controller æ¨¡å—æ¥æä¾›è§†é¢‘æ—¶åºï¼Œæ‰€ä»¥Timing Modeè¿™é‡Œé€‰æ‹©slaveæ¨¡å¼&lt;/p&gt;&lt;p data-pid="WymYaLiM"&gt;æˆ‘ä»¬è¿˜éœ€è¦ç”¨åˆ°ä¸€ä¸ªDVI_Transmitteræ¨¡å—,ç‚¹å‡»Setting--&amp;gt;IP--&amp;gt;Repository&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic2.zhimg.com/v2-b3f5dd0a18462e0faa1adbbd8b1e91cd_b.jpg" data-caption="" data-size="normal" data-rawwidth="369" data-rawheight="254" class="content_image" width="369" data-original-token="v2-3fe007297e305bb8544b85f0ee2b4506"/&gt;&lt;/figure&gt;&lt;p data-pid="x7bN1X3k"&gt;è¿™é‡Œæˆ‘å·²ç»æŠŠè¿™ä¸ªDVI_Transmitteræ¨¡å—æ”¾åœ¨äº†PainterEngine/platform/gpu_ip/ç›®å½•ä¸‹,ç›´æ¥å¼•ç”¨å°±å¯ä»¥äº†&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic2.zhimg.com/v2-e41addb5550fb6e6fbdfb47955457739_b.jpg" data-caption="" data-size="normal" data-rawwidth="858" data-rawheight="456" class="origin_image zh-lightbox-thumb" width="858" data-original="https://pic2.zhimg.com/v2-e41addb5550fb6e6fbdfb47955457739_r.jpg" data-original-token="v2-47a363e60d7c32578104b7dc2c44a08f"/&gt;&lt;/figure&gt;&lt;p data-pid="WteCX4_m"&gt;æœ€åå¢åŠ Video Timing Controller æ¨¡å—&lt;/p&gt;&lt;figure data-size="normal"&gt;&lt;img src="https://pic1.zhimg.com/v2-95f2d2c852af9bf9356dbd8c12431cf4_b.jpg" data-caption="" data-size="normal" data-rawwidth="486" data-rawheight="344" class="origin_image zh-lightbox-t