            <pubDate>Mon, 25 Jul 2022 00:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220725-1296236</guid>
            <link>https://www.zaobao.com/realtime/china/story20220725-1296236</link>
            
            
            
            
            
                
            
            
