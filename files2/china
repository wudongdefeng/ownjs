            <pubDate>Sun, 24 Jul 2022 04:27:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220724-1295963</guid>
            <link>https://www.zaobao.com/realtime/china/story20220724-1295963</link>
            
            
            
            
            
                
            
            
