            <pubDate>Sun, 08 Jan 2023 06:03:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20230108-1351238</guid>
            <link>https://www.zaobao.com/realtime/china/story20230108-1351238</link>
            
            
            
            
            
                
            
            
