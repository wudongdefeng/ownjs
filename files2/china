            <pubDate>Wed, 03 Aug 2022 06:35:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220803-1299334</guid>
            <link>https://www.zaobao.com/realtime/china/story20220803-1299334</link>
            
            
            
            
            
                
            
            
