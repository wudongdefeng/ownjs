            <pubDate>Mon, 15 Aug 2022 01:26:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220815-1303106</guid>
            <link>https://www.zaobao.com/realtime/china/story20220815-1303106</link>
            
            
            
            
            
                
            
            
