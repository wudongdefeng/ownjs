            <pubDate>Thu, 22 Dec 2022 07:30:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221222-1346169</guid>
            <link>https://www.zaobao.com/realtime/china/story20221222-1346169</link>
            
            
            
            
            
                
            
            
