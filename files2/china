            <pubDate>Mon, 15 Aug 2022 11:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220815-1303256</guid>
            <link>https://www.zaobao.com/realtime/china/story20220815-1303256</link>
            
            
            
            
            
                
            
            
