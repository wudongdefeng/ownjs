            <pubDate>Wed, 27 Jul 2022 05:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220727-1296957</guid>
            <link>https://www.zaobao.com/realtime/china/story20220727-1296957</link>
            
            
            
            
            
                
            
            
