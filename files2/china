            <pubDate>Wed, 12 Oct 2022 13:00:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221012-1322066</guid>
            <link>https://www.zaobao.com/realtime/china/story20221012-1322066</link>
            
            
            
            
            
                
            
            
