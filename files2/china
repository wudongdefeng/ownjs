            <pubDate>Wed, 07 Dec 2022 06:21:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221207-1341152</guid>
            <link>https://www.zaobao.com/realtime/china/story20221207-1341152</link>
            
            
            
            
            
                
            
            
