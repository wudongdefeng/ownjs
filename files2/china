            <pubDate>Sat, 07 Jan 2023 09:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20230107-1351081</guid>
            <link>https://www.zaobao.com/realtime/china/story20230107-1351081</link>
            
            
            
            
            
                
            
            
