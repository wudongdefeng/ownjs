            <pubDate>Thu, 10 Nov 2022 02:56:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221110-1331679</guid>
            <link>https://www.zaobao.com/realtime/china/story20221110-1331679</link>
            
            
            
            
            
                
            
            
