            <pubDate>Tue, 04 Oct 2022 23:59:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221005-1319722</guid>
            <link>https://www.zaobao.com/realtime/china/story20221005-1319722</link>
            
            
            
            
            
                
            
            
