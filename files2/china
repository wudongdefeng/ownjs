            <pubDate>Wed, 10 Aug 2022 04:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220810-1301555</guid>
            <link>https://www.zaobao.com/realtime/china/story20220810-1301555</link>
            
            
            
            
            
                
            
            
