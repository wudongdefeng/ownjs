            <pubDate>Thu, 12 Jan 2023 08:32:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20230112-1352772</guid>
            <link>https://www.zaobao.com/realtime/china/story20230112-1352772</link>
            
            
            
            
            
                
            
            
