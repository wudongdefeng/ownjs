            <pubDate>Sun, 18 Dec 2022 04:29:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221218-1344674</guid>
            <link>https://www.zaobao.com/realtime/china/story20221218-1344674</link>
            
            
            
            
            
                
            
            
