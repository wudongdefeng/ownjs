            <pubDate>Wed, 24 Aug 2022 02:26:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220824-1306030</guid>
            <link>https://www.zaobao.com/realtime/china/story20220824-1306030</link>
            
            
            
            
            
                
            
            
