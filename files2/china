            <pubDate>Tue, 20 Sep 2022 12:50:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220920-1315020</guid>
            <link>https://www.zaobao.com/realtime/china/story20220920-1315020</link>
            
            
            
            
            
                
            
            
