            <pubDate>Mon, 24 Oct 2022 13:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221024-1325944</guid>
            <link>https://www.zaobao.com/realtime/china/story20221024-1325944</link>
            
            
            
            
            
                
            
            
