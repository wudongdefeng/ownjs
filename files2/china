            <pubDate>Wed, 02 Nov 2022 01:52:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221102-1328886</guid>
            <link>https://www.zaobao.com/realtime/china/story20221102-1328886</link>
            
            
            
            
            
                
            
            
