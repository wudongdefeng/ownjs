            <pubDate>Sun, 24 Jul 2022 06:41:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220724-1295976</guid>
            <link>https://www.zaobao.com/realtime/china/story20220724-1295976</link>
            
            
            
            
            
                
            
            
