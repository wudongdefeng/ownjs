            <pubDate>Mon, 17 Oct 2022 08:26:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221017-1323753</guid>
            <link>https://www.zaobao.com/realtime/china/story20221017-1323753</link>
            
            
            
            
            
                
            
            
