            <pubDate>Wed, 30 Nov 2022 08:43:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221130-1338934</guid>
            <link>https://www.zaobao.com/realtime/china/story20221130-1338934</link>
            
            
            
            
            
                
            
            
