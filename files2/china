            <pubDate>Sat, 03 Dec 2022 10:15:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221203-1339999</guid>
            <link>https://www.zaobao.com/realtime/china/story20221203-1339999</link>
            
            
            
            
            
                
            
            
