            <pubDate>Mon, 02 Jan 2023 07:17:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20230102-1349402</guid>
            <link>https://www.zaobao.com/realtime/china/story20230102-1349402</link>
            
            
            
            
            
                
            
            
