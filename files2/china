            <pubDate>Wed, 02 Nov 2022 00:31:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221102-1328870</guid>
            <link>https://www.zaobao.com/realtime/china/story20221102-1328870</link>
            
            
            
            
            
                
            
            
