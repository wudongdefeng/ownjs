            <pubDate>Wed, 23 Nov 2022 11:00:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221123-1336316</guid>
            <link>https://www.zaobao.com/realtime/china/story20221123-1336316</link>
            
            
            
            
            
                
            
            
