            <pubDate>Thu, 18 Aug 2022 03:58:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220818-1304126</guid>
            <link>https://www.zaobao.com/realtime/china/story20220818-1304126</link>
            
            
            
            
            
                
            
            
