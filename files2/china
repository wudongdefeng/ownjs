            <pubDate>Thu, 19 Jan 2023 10:31:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20230119-1355067</guid>
            <link>https://www.zaobao.com/realtime/china/story20230119-1355067</link>
            
            
            
            
            
                
            
            
