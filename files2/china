            <pubDate>Mon, 05 Dec 2022 06:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20221205-1340473</guid>
            <link>https://www.zaobao.com/realtime/china/story20221205-1340473</link>
            
            
            
            
            
                
            
            
